<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="MySuite" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="testBase.ExtentReportManager"/>
    </listeners>

    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.validateUserRegistrationAndCheckoutFunctionalityIT"/>
            <class name="testCases.validateRegistrationPageValidationMessagesIT"/>
        </classes>
    </test>

    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testCases.validateUserRegistrationAndCheckoutFunctionalityIT"/>
            <class name="testCases.validateRegistrationPageValidationMessagesIT"/>
        </classes>
    </test>

</suite>